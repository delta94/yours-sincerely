enum Permission {
  ADMIN
  USER
}

type User {
  id: ID! @unique
  username: String!
  password: String!
  email: String @unique
  resetToken: String
  resetTokenExpiry: Float
  posts: [Post!]!
  permissions: [Permission]
}

type Post {
  id: ID! @unique
  published: Boolean! @default(value: "true")
  content: String!
  author: User!
}
