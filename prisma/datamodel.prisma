enum Permission {
  ADMIN
  USER
}

type User {
  id: ID! @id
  email: String! @unique
  username: String! @unique
  name: String
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  posts: [Post!]!
  permissions: [Permission] @scalarList(strategy:RELATION)
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Post {
  id: ID! @id
  published: Boolean! @default(value: false)
  content: String!
  author: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
